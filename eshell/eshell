#!/bin/sh
emacsclient $@ -c -a "" -s "shell" -e "(progn (setf recentf-mode nil) (eshell t) (unless (boundp '-eshell-client-hook-added) (add-hook 'delete-terminal-functions (lambda (frame) (let ((buffer (-find (lambda (x) (with-current-buffer x eshell-mode)) (buffer-list)))) (when buffer (kill-buffer buffer)))))) (setq -eshell-client-hook-added t) (hide-mode-line-mode +1) (defalias 'eshell/exit #'save-buffers-kill-terminal) (setq frame-title-format '(\"\" user-login-name \"@\" system-name \":\" default-directory)))"
